##############################################################################################################################################################################################
# Operating System #
####################
FROM debian:11

##############################################################################################################################################################################################
# Peristente #
##############
ENV USERNAME=marc
ENV GROUP=admin
ENV UID=1000
ENV GUID=1000

##############################################################################################################################################################################################
# Copie de fichier #
####################
COPY ./Docker/Build/Ressources/System/useradd.sh     /root/useradd.sh
COPY ./Docker/Build/Ressources/System/apt_update.sh  /root/apt_update.sh

##############################################################################################################################################################################################
# Permissions #
###############
RUN chmod +x /root/*.sh

##############################################################################################################################################################################################
# Ex√©cution #
#############
RUN bash -c '/root/useradd.sh && /root/apt_update.sh'
