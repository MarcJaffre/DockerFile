FROM debian:latest
WORKDIR /app
RUN apt update 
RUN apt install -y systemd
RUN echo -e "[Service]\n ExecStart=/bin/bash\n[Install]\nWantedBy=multi-user.target" > /etc/systemd/system/systemd.service
RUN systemctl enable systemd
RUN useradd -m -s /bin/bash marc
RUN echo "marc:admin" | chpasswd
CMD ["systemd", "--user"]
