# Image System
FROM alpine

# Build Argument
# ARG 

# UserProfil
RUN addgroup -g 1000 marc
RUN adduser -h /home/marc -s /bin/ash -G marc -D -u 1000 marc

# Mise a jour
RUN apk --no-cache upgrade

# Installation du serveur Web
RUN apk add --no-cache apache2

# Installation de PHP
RUN apk add php

# Port applicatif
EXPOSE 80

# Volume
VOLUME /var/www/html

# WorkDir
WORKDIR /var/www/html

# Commande
ENTRYPOINT ["/usr/sbin/httpd"]

# Argument
CMD ["-D","FOREGROUND"]

