# Image System
FROM alpine

# Mise a jour
RUN apk --no-cache upgrade

# Installation du serveur Web
RUN apk add --no-cache apache2

# Installation de PHP
RUN apk add php

# Port applicatif
EXPOSE 80

# Volume
VOLUME /var/www/html

# Commande
ENTRYPOINT ["/usr/sbin/httpd"]

# Argument
CMD ["-D","FOREGROUND"]

